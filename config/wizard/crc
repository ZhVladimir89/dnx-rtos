# answer definitions
NO=NO
YES=YES

# architecture definitions
stm32f1=stm32f1
stm32f2=stm32f2
stm32f3=stm32f3
stm32f4=stm32f4
arch=

# read driver enable status and CPU architecture
config
        keyread(makefile, ../project/Makefile, ENABLE_CRC, crc_en)
        keyread(makefile, ../project/Makefile, PROJECT_CPU_ARCH, arch)
        if(crc_en = NO)
                exit()
        endif
endconfig

#-------------------------------------------------------------------------------
# CRC configuration for stm32f1 architecture
#-------------------------------------------------------------------------------
config
        if(arch = stm32f1)
        endif
endconfig

#-------------------------------------------------------------------------------
# CRC configuration for stm32f2 architecture
#-------------------------------------------------------------------------------
config
        if(arch = stm32f2)
        endif
endconfig

#-------------------------------------------------------------------------------
# CRC configuration for stm32f3 architecture
#-------------------------------------------------------------------------------
config
        if(arch = stm32f3)
        endif
endconfig

#-------------------------------------------------------------------------------
# CRC configuration for stm32f4 architecture
#-------------------------------------------------------------------------------
config
        if(arch = stm32f4)
        endif
endconfig
