config
        print()
        keyread(header, ../project/flags.h, __NETWORK_ENABLE__, net_en)
        print(Do you want to enable network?)
        print(Current value: @net_en)
        additem(YES,)
        additem(NO,)
        readsel(net_en,)
        keysave(header, ../project/flags.h, __NETWORK_ENABLE__, net_en)
        keysave(makefile, ../project/Makefile, ENABLE_NETWORK, net_en)
endconfig

config
        no=NO
        if(net_en = no)
                exit()
        endif
endconfig

config
        # read MAC address
        keyread(header, ../project/flags.h, __NETWORK_MAC_ADDR_0__, maca0)
        keyread(header, ../project/flags.h, __NETWORK_MAC_ADDR_1__, maca1)
        keyread(header, ../project/flags.h, __NETWORK_MAC_ADDR_2__, maca2)
        keyread(header, ../project/flags.h, __NETWORK_MAC_ADDR_3__, maca3)
        keyread(header, ../project/flags.h, __NETWORK_MAC_ADDR_4__, maca4)
        keyread(header, ../project/flags.h, __NETWORK_MAC_ADDR_5__, maca5)

        print()
        print(Setup a MAC address. You configure: __ xx xx xx xx xx)
        print(Current value: @maca0 @maca1 @maca2 @maca3 @maca4 @maca5)
        readuint(tmp, Enter MAC part number [hex])
        keysave(header, ../project/flags.h, __NETWORK_MAC_ADDR_0__, tmp)
endconfig

